{
  
  "manifest_version": 2,
  "name": "Auto Login",
  "short_name": "Auto Login",
  "version": "2.6.0",


  "description": "Automatically login to your favourite websites without entering credentials ",
  "icons": {  
   "48" : "images/autologin-48.png",
   "64" : "images/autologin-64.png",
    "128" : "images/autologin-128.png"
	},

  
    "page_action": {
		"default_title": "Page action"
	  },
	  
  "author": "Muthukumaran Navaneethakrishnan(https://github.com/muthuishere)",
 "background": { "scripts": ["scripts/Helper.js","global.js"] },
 
  
 "web_accessible_resources": [
    "images/*.png",  
	"images/*.jpg", 
	"css/*.css" ,
	"auth.html" 
  ],
  
  "options_page": "options.html",
  "permissions": ["tabs","declarativeContent","webRequest","webRequestBlocking", "http://*/*", "https://*/*"]
  
}